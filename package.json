{
  "name": "amplitude-utils",
  "version": "1.0.0",
  "description": "An util that supports server side usage and other features.",
  "main": "bundle.js",
  "repository": "https://github.com/gjccing/amplitude-utils",
  "author": "gjccing <j2160204@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn lint && babel src/index.js --out-file bundle.js --source-maps",
    "lint": "eslint --fix .",
    "test": "jest",
    "dev": "nodemon"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "amplitude-js": "^4.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.4.2",
    "eslint": "^5.5.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.5.0",
    "nodemon": "^1.18.4",
    "regenerator-runtime": "^0.12.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "edge": "17",
            "firefox": "60",
            "chrome": "67",
            "safari": "11.1"
          },
          "useBuiltIns": "usage"
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 120,
          "ignoreUrls": true
        }
      ],
      "arrow-spacing": [
        "error"
      ],
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "jest": {},
  "nodemonConfig": {
    "watch": [
      "src/*.js"
    ],
    "exec": "yarn test",
    "delay": "2500"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test && yarn build"
    }
  }
}
